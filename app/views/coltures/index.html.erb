<div class="page-header">
  <%= link_to new_colture_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuova Coltura
  <% end %>
  <h1>Colture</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover"  id="table">
    <thead>
      <tr>
            <th>Name</th>
            <th>Categoria</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @coltures) do |colture| %>
            <td><%= colture.name %></td>
            <td><%= @categories.where(id: colture.id_cat).first.name %></td>
            <td><%= link_to 'Visualizza', colture %></td>
        <td><%= link_to 'Modifica', edit_colture_path(colture) %></td>
        <td><%= link_to 'Elimina', colture, method: :delete, data: { confirm: 'Sei sicuro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
