<%= form_for(@colture, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @colture.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@colture.errors.count, "error") %> prohibited this colture from being saved:</h4>

      <ul>
      <% @colture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :id_cat, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <select class="selectpicker" data-live-search="true" name="colture[id_cat]" id="colture_id_cat">
         <%= @categories.each do |f|%>
          <option value="<%= f.id%>"><%=f.name%></option>
          <%end%>
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<script>
$( document ).ready(function() {
$('select').selectpicker();
});
</script>