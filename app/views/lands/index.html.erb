<div class="page-header">
  <%= link_to new_land_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuova Terra
  <% end %>
  <h1> Terre</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover"  id="table">
    <thead>
      <tr>
            <th>Coltura</th>
            <th>Estensione (Ha)</th>
            <th>Azienda</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @lands) do |land| %>
            <td><%= @coltures.where(id: land.id_colture).first.name%></td>
            <td><%= land.ha %></td>
            <td><%= @companies.where(id: land.id_company).first.name%></td>
            <td><%= link_to 'Visualizza', land %></td>
        <td><%= link_to 'Modifica', edit_land_path(land) %></td>
        <td><%= link_to 'Elimina', land, method: :delete, data: { confirm: 'Sei sicuro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
