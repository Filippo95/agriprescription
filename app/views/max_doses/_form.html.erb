<%= form_for(@max_dose, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @max_dose.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@max_dose.errors.count, "error") %> prohibited this max_dose from being saved:</h4>

      <ul>
      <% @max_dose.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :id_product, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      
       <select class="selectpicker" data-live-search="true" name="max_dose[id_product]" id="max_dose_id_product">
         <%= @products.each do |f|%>
          <option value="<%= f.id%>"><%=f.nome%></option>
          <%end%>
      </select>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :id_colture, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
     
      <select class="selectpicker" data-live-search="true" name="max_dose[id_colture]" id="max_dose_id_colture">
         <%= @coltures.each do |f|%>
          <option value="<%= f.id%>"><%=f.name%></option>
          <%end%>
      </select>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :max_gr_ha, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :max_gr_ha, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<script>
 
$('.selectpicker').selectpicker('refresh');
</script>