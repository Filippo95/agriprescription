<%= form_for(@company, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @company.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h4>

      <ul>
      <% @company.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name,"Nome: ", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cf, "Codice Fiscale: ",class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cf, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :piva,"Partita IVA: ", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :piva, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :registred_office,"Sede legale: ", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :registred_office, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :mail, "Email: ",class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :mail, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
