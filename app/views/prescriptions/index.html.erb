<div class="page-header">
  <%= link_to new_prescription_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuova Ricetta
  <% end %>
  <h1>Ricette</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover" id="table">
    <thead>
      <tr>
            <th>Date</th>
            <th>Azienda</th>
            <th>Terra</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @prescriptions) do |prescription| %>
            <td><%= prescription.date %></td>
            <td><%= @companies.where(id: prescription.id_company).first.name %></td>
            <td><%= @lands.where(id: prescription.land).first.ha %>-<%= @coltures.where(id: @lands.where(id: prescription.land).first.id_colture).first.name %></td>
            <td><%= link_to 'Visualizza', prescription %></td>
        <td><%= link_to 'Modifica', edit_prescription_path(prescription) %></td>
        <td><%= link_to 'Elimina', prescription, method: :delete, data: { confirm: 'Sei sicuro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
